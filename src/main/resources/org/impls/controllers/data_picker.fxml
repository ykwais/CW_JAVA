        <HBox alignment="BOTTOM_LEFT" prefHeight="53.0" prefWidth="600.0">
            <children>
                <Button fx:id="backButton" mnemonicParsing="false" style="-fx-font-size: 16px; -fx-background-color: #f44336; -fx-text-fill: white; -fx-border-radius: 5px; -fx-padding: 10px; -fx-cursor: hand;" text="Back">
                </Button>
            </children>
            <padding>
                <Insets left="30.0" />
            </padding>
        </HBox>
    </children>
</VBox>
