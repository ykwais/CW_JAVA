                <Insets bottom="15.0" left="30.0" right="30.0" />
            </VBox.margin>
        </DatePicker>

        <!-- Выбор конечной даты -->
        <Label style="-fx-font-size: 14px; -fx-text-fill: #333;" text="Конечная дата">
            <VBox.margin>
                <Insets bottom="10.0" />
            </VBox.margin>
        </Label>
        <DatePicker fx:id="endDatePicker" prefHeight="50.0" prefWidth="351.0" style="-fx-font-size: 14px; -fx-background-color: white; -fx-border-radius: 5px; -fx-padding: 10px; -fx-text-fill: #333;">
            <VBox.margin>
                <Insets bottom="15.0" left="30.0" right="30.0" />
            </VBox.margin>
        </DatePicker>

        <!-- Кнопка Go -->
        <Button fx:id="enterButton" mnemonicParsing="false" style="-fx-font-size: 16px; -fx-background-color: #4CAF50; -fx-text-fill: white; -fx-border-radius: 5px; -fx-padding: 10px; -fx-cursor: hand;" text="Go">
