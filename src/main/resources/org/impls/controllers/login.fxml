<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="200.0" minWidth="300.0" prefHeight="500.0" prefWidth="600.0" style="-fx-background-color: #f4f4f4;" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.impls.controllers.LoginController">
   <children>
      <Label style="-fx-font-size: 14px; -fx-text-fill: #333;" text="Логин">
         <VBox.margin>
            <Insets bottom="20.0" />
         </VBox.margin>
      </Label>
      <TextField fx:id="loginTextField" promptText="Введите логин" style="-fx-font-size: 14px; -fx-background-color: white; -fx-border-radius: 5px; -fx-padding: 10px; -fx-text-fill: #333;">
         <VBox.margin>
            <Insets bottom="20.0" left="30.0" right="30.0" />
         </VBox.margin>
      </TextField>

      <Label style="-fx-font-size: 14px; -fx-text-fill: #333;" text="Пароль">
         <VBox.margin>
            <Insets bottom="20.0" />
         </VBox.margin>
      </Label>
      <TextField fx:id="passwordTextField" promptText="Введите пароль" style="-fx-font-size: 14px; -fx-background-color: white; -fx-border-radius: 5px; -fx-padding: 10px;  -fx-text-fill: #333;">
         <VBox.margin>
            <Insets bottom="20.0" left="30.0" right="30.0" />
         </VBox.margin>
      </TextField>

      <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0">
         <children>
            <Button fx:id="loginButton" mnemonicParsing="false" style="-fx-font-size: 16px; -fx-background-color: #4CAF50; -fx-text-fill: white; -fx-border-radius: 5px; -fx-padding: 10px; -fx-cursor: hand;" text="Войти">
               <HBox.margin>
                  <Insets right="30.0" />
               </HBox.margin>
            </Button>
            <Button fx:id="registerButton" mnemonicParsing="false" style="-fx-font-size: 16px; -fx-background-color: #f44336; -fx-text-fill: white; -fx-border-radius: 5px; -fx-padding: 10px; -fx-cursor: hand;" text="Регистрация" />
         </children>
      </HBox>
   </children>
</VBox>

